{% extends 'base.html.twig' %}

{% block title %}Détail prospection{% endblock %}

{% block page_content %}
    <div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
        <div>
            <h4 class="mb-1">{{ structure.nomStructure }}</h4>
            <p class="text-muted mb-0">{{ structure.localite }} · {{ structure.secteurActivite }}</p>
        </div>
        <a href="{{ path('app_dashboard_prospection') }}" class="btn btn-outline-secondary btn-sm">
            Retour au dashboard
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="text-muted">Téléphone structure</div>
                    <div class="fw-semibold">{{ structure.telephoneStructure }}</div>
                </div>
                <div class="col-md-4">
                    <div class="text-muted">Responsable</div>
                    <div class="fw-semibold">{{ structure.nomResponsable }}</div>
                </div>
                <div class="col-md-4">
                    <div class="text-muted">Téléphone responsable</div>
                    <div class="fw-semibold">{{ structure.telephoneResponsable }}</div>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h6 class="card-title">Historique des prospections</h6>
            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>CFA</th>
                            <th>Utilisateur</th>
                            <th>Métier</th>
                            <th class="text-end">Postes</th>
                            <th>Commentaire</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for row in details %}
                            <tr>
                                <td>{{ row.prospection_date ? row.prospection_date|date('d/m/Y') : '-' }}</td>
                                <td>{{ row.cfa_nom ?? '-' }}</td>
                                <td>{{ row.user_email ?? '-' }}</td>
                                <td>{{ row.metier_nom ?? 'Non renseigné' }}</td>
                                <td class="text-end">{{ row.postes }}</td>
                                <td>{{ row.prospection_commentaire ?? '-' }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center text-muted">Aucune prospection trouvée.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
