{% extends 'base.html.twig' %}

{% block title %}Liste des Convocations{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Liste des Convocations</h1>

        <!-- Filtres -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="fas fa-filter"></i> Filtres</h5>
            </div>
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-3">
                        <label for="programmation" class="form-label">Programmation</label>
                        <select name="programmation" id="programmation" class="form-select">
                            <option value="">Toutes</option>
                            {% for prog in programmations %}
                                <option value="{{ prog.id }}" {{ filters.programmation == prog.id ? 'selected' : '' }}>
                                    {{ prog.typeEvaluation.libelle }} - {{ prog.dateLancement|date('d/m/Y') }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="jury" class="form-label">Jury</label>
                        <select name="jury" id="jury" class="form-select">
                            <option value="">Tous</option>
                            {% for jury in jurys %}
                                <option value="{{ jury.id }}" {{ filters.jury == jury.id ? 'selected' : '' }}>
                                    {{ jury.libelle }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="centre" class="form-label">Centre</label>
                        <select name="centre" id="centre" class="form-select">
                            <option value="">Tous</option>
                            {% for centre in centres %}
                                <option value="{{ centre.id }}" {{ filters.centre == centre.id ? 'selected' : '' }}>
                                    {{ centre.libelle }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="statut" class="form-label">Statut</label>
                        <select name="statut" id="statut" class="form-select">
                            <option value="">Tous</option>
                            <option value="convoqué" {{ filters.statut == 'convoqué' ? 'selected' : '' }}>Convoqué</option>
                            <option value="absent" {{ filters.statut == 'absent' ? 'selected' : '' }}>Absent</option>
                            <option value="présent" {{ filters.statut == 'présent' ? 'selected' : '' }}>Présent</option>
                        </select>
                    </div>
                    <div class="col-12 text-end">
                        <a href="{{ path('app_convocation_index') }}" class="btn btn-secondary">Réinitialiser</a>
                        <button type="submit" class="btn btn-primary">Filtrer</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Tableau des résultats -->
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Candidat</th>
                                <th>Programmation</th>
                                <th>Date Passage</th>
                                <th>Jury</th>
                                <th>Centre</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for convocation in convocations %}
                            <tr>
                                <td>
                                    <strong>{{ convocation.candidature.nomComplet }}</strong>
                                </td>
                                <td>
                                    {{ convocation.programEvaluation.typeEvaluation.libelle }}
                                    <small class="text-muted d-block">{{ convocation.programEvaluation.dateLancement|date('d/m/Y') }}</small>
                                </td>
                                <td>
                                    {% if convocation.juryDate %}
                                        {{ convocation.juryDate.datePassage|date('d/m/Y H:i') }}
                                    {% else %}
                                        <span class="text-muted">Non définie</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if convocation.juryDate and convocation.juryDate.jury %}
                                        {{ convocation.juryDate.jury.libelle }}
                                    {% else %}
                                        <span class="text-muted">Non assigné</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {{ convocation.programEvaluation.centre.libelle|default('N/A') }}
                                </td>
                                <td>
                                    <span class="badge bg-{{ convocation.statut == 'convoqué' ? 'info' : (convocation.statut == 'absent' ? 'danger' : 'success') }}">
                                        {{ convocation.statut }}
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('app_convocation_show', {'id': convocation.id}) }}" class="btn btn-info btn-sm" title="Voir">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_convocation_edit', {'id': convocation.id}) }}" class="btn btn-warning btn-sm" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" action="{{ path('app_convocation_delete', {'id': convocation.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');" style="display: inline-block;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ convocation.id) }}">
                                            <button class="btn btn-danger btn-sm rounded-0 rounded-end" title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center py-4">
                                    <i class="fas fa-info-circle fa-2x text-muted mb-3"></i>
                                    <p class="mb-0">Aucune convocation trouvée pour ces critères.</p>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
