{% extends 'base.html.twig' %}

{% block title %}Secteurs d'activité{% endblock %}

{% block page_content %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-1">Secteurs d'activité</h1>
        
        </div>
        <a href="{{ path('app_secteur_new') }}" class="btn btn-primary">
            <i class="link-icon" data-feather="plus"></i> Nouveau secteur
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
        </div>
    {% endfor %}

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            {% if secteurs is empty %}
                <div class="text-center py-5 text-muted">
                    <i class="link-icon" data-feather="folder" style="width: 48px; height: 48px;"></i>
                    <p class="mt-3 mb-0">Aucun secteur. Créez-en un pour gérer l'organisation de vos métiers.</p>
                    <a href="{{ path('app_secteur_new') }}" class="btn btn-outline-primary mt-3">Créer un secteur</a>
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="border-0 ps-4">Nom</th>
                                <th class="border-0">Durée formation</th>
                                <th class="border-0 pe-4 text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for secteur in secteurs %}
                                <tr>
                                    <td class="ps-4 fw-semibold">{{ secteur.nom }}</td>
                                    <td>
                                        {% if secteur.dureeFormation %}
                                            <span class="badge bg-info">{{ secteur.dureeFormation }} mois</span>
                                        {% else %}
                                            <span class="text-muted">—</span>
                                        {% endif %}
                                    </td>
                                   
                                    <td class="pe-4 text-end">
                                        <a href="{{ path('app_secteur_edit', { id: secteur.id }) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="link-icon" data-feather="edit-2" style="width: 14px; height: 14px;"></i> Modifier
                                        </a>
                                        <form method="post" action="{{ path('app_secteur_delete', { id: secteur.id }) }}" class="d-inline" onsubmit="return confirm('Supprimer ce secteur ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ secteur.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Supprimer</button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
