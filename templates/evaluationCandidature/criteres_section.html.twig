
<div id="criteres-section" class="mt-4">
    <h5 class="mb-3">Notation des critères</h5>
    
    {% if criteres is empty %}
        <div class="alert alert-info">
            Aucun critère défini pour cette grille d'évaluation.
        </div>
    {% else %}
        <div class="criteres-container">
            {% for critere in criteres %}
                {{ include('evaluationCandidature/critere_row.html.twig', {critere: critere}) }}
            {% endfor %}
        </div>
        
        <div class="mt-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <strong>Total: </strong>
                    <span id="total-points">0.0</span> 
                    <span> / {{ totalBareme }} points</span>
                    <input type="hidden" id="evaluation_note_totale" name="evaluation[note_totale]" value="0">
                </div>
                <div class="text-muted small">
                    <i class="fas fa-info-circle"></i> 
                    La note maximale pour chaque critère est son barème.
                </div>
            </div>
        </div>
    {% endif %}
</div>
