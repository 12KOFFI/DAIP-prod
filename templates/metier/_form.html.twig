{% extends 'base.html.twig' %}

{% block page_content %}
    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">{{ title|default('Formulaire Métier') }}</h4>
                   

                    {{ form_start(form, {'attr': {'class': 'forms-sample', 'enctype': 'multipart/form-data'}}) }}
                        
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.nom, {
                                    'label': 'Nom du métier',
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Entrez le nom du métier'
                                    },
                                    'row_attr': {'class': 'mb-3'}
                                }) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.niveauEtude, {
                                    'label': 'Niveau d\'étude',
                                    'attr': {
                                        'class': 'form-select',
                                        'placeholder': 'Sélectionnez un niveau d\'étude'
                                    },
                                    'row_attr': {'class': 'mb-3'}
                                }) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                {{ form_row(form.secteur, {
                                    'label': 'Secteur d\'activité',
                                    'attr': { 'class': 'form-select', 'placeholder': 'Sélectionnez un secteur' },
                                    'row_attr': {'class': 'mb-3'}
                                }) }}
                                <small class="text-muted">Associez ce métier à un secteur (menu Référentiels → Secteurs).</small>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                {{ form_row(form.description, {
                                    'label': 'Description',
                                    'attr': {
                                        'class': 'form-control',
                                        'rows': 4,
                                        'placeholder': 'Décrivez ce métier...'
                                    },
                                    'row_attr': {'class': 'mb-3'}
                                }) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                {{ form_row(form.diplomes, {
                                    'label': 'Diplômes associés',
                                    'attr': {
                                        'class': 'form-select',
                                        'data-choices': 'true',
                                        'data-placeholder': 'Sélectionnez un ou plusieurs diplômes',
                                        'multiple': 'multiple'
                                    },
                                    'row_attr': {'class': 'mb-3'}
                                }) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.imageFile, {
                                    'label': 'Image descriptive',
                                    'attr': {
                                        'class': 'form-control',
                                        'accept': 'image/*'
                                    },
                                    'row_attr': {'class': 'mb-3'}
                                }) }}
                                {% if form.vars.value.image %}
                                    <div class="mt-2">
                                        <img src="{{ asset('uploads/metiers/' ~ form.vars.value.image) }}" 
                                             alt="Image actuelle" 
                                             class="img-thumbnail"
                                             style="max-width: 200px; max-height: 200px;">
                                        <p class="text-muted small mt-2">Image actuelle</p>
                                    </div>
                                {% endif %}
                            </div>
                            
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_metier_index') }}" class="btn btn-light">
                                <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                            </a>
                            <div>
                                <button type="reset" class="btn btn-light me-2">
                                    <i class="fas fa-undo me-1"></i> Réinitialiser
                                </button>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-1"></i> {{ button_label|default('Enregistrer') }}
                                </button>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <style>
        .form-label {
            font-weight: 500;
            margin-bottom: 0.5rem;
        }
        .form-control:focus {
            border-color: #4b49ac;
            box-shadow: 0 0 0 0.2rem rgba(75, 73, 172, 0.25);
        }
        .btn-primary {
            background-color: #4b49ac;
            border-color: #4b49ac;
        }
        .btn-primary:hover {
            background-color: #3f3d8f;
            border-color: #3f3d8f;
        }
    </style>
{% endblock %}
