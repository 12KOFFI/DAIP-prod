
{% extends 'base.html.twig' %}

{% block title %}Formation form{% endblock %}
{% block page_content %}

<div class="row mt-5 justify-content-center">
    <div class="col-md-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">{{ title|default('Formation') }}</h6>

                {{ form_start(form, {'attr': {'class': 'forms-sample'}}) }}

                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.libelle) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.description) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.dateDebut) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.dateFin) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        {{ form_row(form.ageMinimum) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.ageMaximum) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.publicCible) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        {{ form_row(form.statut, {
                            'attr': {'class': 'form-select'}
                        }) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.image) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.banniere) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        {{ form_row(form.logo) }}
                    </div>
                </div>

                {# Bloc Projet #}
                <div class="mt-4 p-3 border rounded">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="mb-0">Projet</h5>
                        <a href="{{ path('app_projet_new') }}" target="_blank" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-plus"></i> Ajouter
                        </a>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            {{ form_row(form.projet) }}
                        </div>
                    </div>
                </div>

                {# Bloc Établissement CFA #}
                <div class="mt-4 p-3 border rounded">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="mb-0">Établissement CFA</h5>
                        <a href="{{ path('app_cfa_etablissement_new') }}" target="_blank" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-plus"></i> Ajouter
                        </a>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            {{ form_row(form.cfa_etablissement) }}
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12 d-flex justify-content-between">
                        <div>
                            <a href="{{ path('app_formation_index') }}" class="btn btn-secondary me-2">
                                <i class="fas fa-arrow-left"></i> Retour à la liste
                            </a>
                            <button type="reset" class="btn btn-outline-secondary me-2">
                                <i class="fas fa-undo"></i> Réinitialiser
                            </button>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> {{ button_label|default('Enregistrer') }}
                            </button>
                        </div>
                    </div>
                </div>

                <script>
                function previewImage(input, previewId) {
                    const preview = document.getElementById(previewId);
                    const file = input.files[0];
                    
                    if (file) {
                        const reader = new FileReader();
                        
                        reader.onload = function(e) {
                            preview.src = e.target.result;
                            preview.classList.remove('d-none');
                        }
                        
                        reader.readAsDataURL(file);
                    } else {
                        preview.src = '';
                        preview.classList.add('d-none');
                    }
                }
                </script>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
