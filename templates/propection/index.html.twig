{% extends 'base.html.twig' %}

{% block title %}Liste des Prospections{% endblock %}

{% block page_content %}
    <h1 class="mb-4 text-center">Liste des Prospections</h1>


    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table">
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>CFA / Établissement</th>
                    <th>Structure d'accueil</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for prospection in prospections %}
                <tr>
                    <td>{{ prospection.id }}</td>
                    <td>
                        {% if prospection.date %}
                            <span class="badge bg-primary">{{ prospection.date|date('d/m/Y') }}</span>
                        {% else %}
                            <span class="text-muted">-</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if prospection.cfaEtablissement %}
                            <strong>{{ prospection.cfaEtablissement.nomEtablissement }}</strong>
                        {% else %}
                            <span class="text-muted">-</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if prospection.structureAcceuil %}
                            {{ prospection.structureAcceuil.nomStructure }}
                        {% else %}
                            <span class="text-muted">-</span>
                        {% endif %}
                    </td>
                    <td>
                        <div class="d-flex flex-column flex-sm-row gap-2">
                            <a href="{{ path('app_prospection_edit', {'id': prospection.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                            <form method="post"
                                  action="{{ path('app_prospection_delete', {'id': prospection.id}) }}"
                                  class="m-0"
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette prospection ?');">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ prospection.id) }}">
                                <button class="btn btn-danger btn-sm">Supprimer</button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center text-muted py-4">Aucune prospection trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

