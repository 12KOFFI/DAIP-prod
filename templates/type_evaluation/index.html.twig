{% extends 'base.html.twig' %}

{% block title %}Types d'Évaluation{% endblock %}

{% block page_content %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Liste des Types d'Évaluation</h1>
            <a href="{{ path('app_type_evaluation_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nouveau Type
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Id</th>
                                <th>Libellé</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for type_evaluation in type_evaluations %}
                            <tr>
                                <td>{{ type_evaluation.id }}</td>
                                <td>{{ type_evaluation.libelle }}</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('app_type_evaluation_show', {'id': type_evaluation.id}) }}" class="btn btn-info btn-sm" title="Voir">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_type_evaluation_edit', {'id': type_evaluation.id}) }}" class="btn btn-warning btn-sm" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" action="{{ path('app_type_evaluation_delete', {'id': type_evaluation.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');" style="display: inline-block;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ type_evaluation.id) }}">
                                            <button class="btn btn-danger btn-sm rounded-0 rounded-end" title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3" class="text-center">Aucun type d'évaluation trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
