{% extends 'base.html.twig' %}

{% block title %}Détail type d'évaluation{% endblock %}

{% block page_content %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 mb-0">Type d'évaluation</h1>
        <a href="{{ path('app_type_evaluation_index') }}" class="btn btn-outline-secondary btn-sm">Retour</a>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <table class="table mb-0">
                <tbody>
                    <tr>
                        <th style="width: 180px;">ID</th>
                        <td>{{ type_evaluation.id }}</td>
                    </tr>
                    <tr>
                        <th>Libellé</th>
                        <td>{{ type_evaluation.libelle }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a href="{{ path('app_type_evaluation_edit', {'id': type_evaluation.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
        <form method="post" action="{{ path('app_type_evaluation_delete', {'id': type_evaluation.id}) }}" onsubmit="return confirm('Supprimer ce type d\'évaluation ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ type_evaluation.id) }}">
            <button class="btn btn-outline-danger btn-sm" type="submit">Supprimer</button>
        </form>
    </div>
{% endblock %}
