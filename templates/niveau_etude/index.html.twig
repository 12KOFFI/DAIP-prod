{% extends 'base.html.twig' %}

{% block title %}NiveauEtude index{% endblock %}

{% block page_content %}
    <h1 class="mb-4">Liste des Niveaux d'Étude</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libellé</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for niveau_etude in niveau_etudes %}
            <tr>
                <td>{{ niveau_etude.id }}</td>
                <td>{{ niveau_etude.libelle }}</td>
                <td>
                    <a href="{{ path('app_niveau_etude_edit', {'id': niveau_etude.id}) }}" class="btn btn-warning btn-lg mt-1">Modifier</a>
                    <form method="post" action="{{ path('app_niveau_etude_delete', {'id': niveau_etude.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette candidature ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ niveau_etude.id) }}">
                        <button class="btn btn-danger btn-lg mt-1">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_niveau_etude_new') }}" class="btn btn-primary btn-lg mt-1">
    Nouveau
</a>
{% endblock %}
