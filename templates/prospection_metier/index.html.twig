{% extends 'base.html.twig' %}

{% block title %}Liste des Prospections Métiers{% endblock %}

{% block styles %}
    {# CSS commun importé #}
    <link rel="stylesheet" href="{{ asset('css/common-styles.css') }}">
{% endblock %}

{% block page_content %}
    {# En-tête de la page #}
    <div class="page-header mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="d-flex align-items-center">
                    <div class="icon-wrapper bg-primary bg-opacity-10 rounded-3 p-3 me-3">
                        <i class="fas fa-briefcase fs-3 text-primary"></i>
                    </div>
                    <div>
                        <h1 class="h3 mb-1 fw-bold">Prospections</h1>
                        <p class="text-muted mb-0">Gestion des postes d'apprentissage prospectés</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mt-3 mt-md-0">
                <div class="d-grid">
                    <a href="{{ path('app_structure_accueil_new', { flow: 'prospection' }) }}" 
                       class="btn btn-primary py-2">
                        <i class="fas fa-plus-circle me-2"></i>
                        Nouvelle prospection
                    </a>
                </div>
            </div>
        </div>
    </div>

    {# Modal pour ajouter une prospection #}
    <div class="modal fade" id="addProspectionModal" tabindex="-1" aria-labelledby="addProspectionModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addProspectionModalLabel">
                        <i class="fas fa-plus-circle me-2"></i>
                        Ajouter une prospection métier
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="addProspectionForm" method="post" action="{{ path('app_prospection_metier_new') }}">
                        <!-- Champ Prospection masqué -->
                        <input type="hidden" name="prospection" id="prospection_field" value="">
                        
                        <div class="mb-3">
                            <label for="metier" class="form-label fw-semibold">
                                <i class="fas fa-tools me-2"></i>Métier *
                            </label>
                            <select class="form-select" id="metier" name="metier" required>
                                <option value="">Sélectionner un métier</option>
                                {% if app.user and app.user.cfaEtablissement %}
                                    {% for filiere in app.user.cfaEtablissement.filieres %}
                                        {% for metier in filiere.metier %}
                                            <option value="{{ metier.id }}">{{ metier.nom }}</option>
                                        {% endfor %}
                                    {% endfor %}
                                {% endif %}
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label for="nombrePostes" class="form-label fw-semibold">
                                <i class="fas fa-users me-2"></i>Nombre de postes *
                            </label>
                            <input type="number" class="form-control" id="nombrePostes" name="nombrePostes" min="1" required>
                        </div>
                        
                        <!-- Token CSRF -->
                        <input type="hidden" name="_token" value="{{ csrf_token('prospection_metier_new') }}">
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Annuler
                    </button>
                    <button type="submit" form="addProspectionForm" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Enregistrer
                    </button>
                </div>
            </div>
        </div>
    </div>

    {# Carte contenant le tableau #}
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0 py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="h6 mb-0 fw-semibold text-secondary">
                    <i class="fas fa-list me-2"></i>
                    Liste des prospections
                </h2>
                <span class="badge bg-light text-dark border">
                    {{ prospection_metiers|length }} prospection{{ prospection_metiers|length > 1 ? 's' : '' }}
                </span>
            </div>
        </div>
        
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="text-muted fw-semibold small px-4 py-3">ID</th>
                            <th class="text-muted fw-semibold small py-3">Métier</th>
                            <th class="text-muted fw-semibold small py-3">Postes</th>
                            <th class="text-muted fw-semibold small py-3">Structure</th>
                            <th class="text-muted fw-semibold small text-end px-4 py-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for prospection_metier in prospection_metiers %}
                        <tr class="table-row-hover">
                            <td class="px-4">
                                <span class="text-muted small">#{{ prospection_metier.id }}</span>
                            </td>
                            <td>
                                {% if prospection_metier.metier %}
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success">
                                        <i class="fas fa-tools me-1"></i>
                                        {{ prospection_metier.metier.nom }}
                                    </span>
                                {% else %}
                                    <span class="text-muted">—</span>
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge bg-info bg-opacity-10 text-info border border-info">
                                    <i class="fas fa-users me-1"></i>
                                    {{ prospection_metier.nombrePostes }}
                                </span>
                            </td>
                            <td>
                                {% if prospection_metier.prospection and prospection_metier.prospection.structureAcceuil %}
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-building text-muted me-2 small"></i>
                                        <span class="text-secondary">{{ prospection_metier.prospection.structureAcceuil.nomStructure }}</span>
                                    </div>
                                {% else %}
                                    <span class="text-muted">—</span>
                                {% endif %}
                            </td>
                            <td class="px-4">
                                <div class="d-flex gap-2 justify-content-end">
                                    <button type="button" 
                                            class="btn btn-sm btn-outline-success"
                                            onclick="addProspectionFor({{ prospection_metier.prospection.id|default('null') }})"
                                            {% if not prospection_metier.prospection %}disabled{% endif %}
                                            data-bs-toggle="tooltip"
                                            title="Ajouter un poste">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                    <a href="{{ path('app_prospection_metier_edit', {'id': prospection_metier.id}) }}" 
                                       class="btn btn-sm btn-outline-warning"
                                       data-bs-toggle="tooltip"
                                       title="Modifier la prospection">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post"
                                          action="{{ path('app_prospection_metier_delete', {'id': prospection_metier.id}) }}"
                                          class="d-inline"
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette prospection métier ?');">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ prospection_metier.id) }}">
                                        <button class="btn btn-sm btn-outline-danger"
                                                data-bs-toggle="tooltip"
                                                title="Supprimer la prospection">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <div class="empty-state">
                                    <div class="icon-wrapper bg-light rounded-circle p-4 d-inline-flex mb-3">
                                        <i class="fas fa-inbox fs-1 text-muted"></i>
                                    </div>
                                    <h3 class="h5 text-muted mb-2">Aucune prospection métier</h3>
                                    <p class="text-muted mb-3">Commencez par créer votre première prospection</p>
                                    <a href="{{ path('app_structure_accueil_new', { flow: 'prospection' }) }}" 
                                       class="btn btn-primary">
                                        <i class="fas fa-plus-circle me-2"></i>
                                        Nouvelle prospection
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script>
function addProspectionFor(prospectionId) {
    if (prospectionId) {
        document.getElementById('prospection_field').value = prospectionId;
    }
    var modal = new bootstrap.Modal(document.getElementById('addProspectionModal'));
    modal.show();
}

// Gérer la soumission du formulaire
document.getElementById('addProspectionForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const prospectionId = document.getElementById('prospection_field').value;
    const metierId = document.getElementById('metier').value;
    const nombrePostes = document.getElementById('nombrePostes').value;
    
    if (!prospectionId || !metierId || !nombrePostes) {
        alert('Veuillez remplir tous les champs obligatoires.');
        return;
    }
    
    // Créer et envoyer la requête API
    fetch('/prospection-metier/api/prospection-metiers', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
        },
        body: JSON.stringify({
            prospectionId: prospectionId,
            metierId: metierId,
            nombrePostes: nombrePostes
        })
    })
    .then(response => response.json())
    .then(data => {
        if (data.prospectionMetierId) {
            // Fermer le modal
            var modal = bootstrap.Modal.getInstance(document.getElementById('addProspectionModal'));
            modal.hide();
            // Recharger la page pour voir le nouvel élément
            window.location.reload();
        } else {
            alert('Erreur: ' + (data.message || 'Une erreur est survenue.'));
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Une erreur est survenue lors de l\'ajout de la prospection.');
    });
});

// Réinitialiser le champ prospection quand le modal se ferme
document.getElementById('addProspectionModal').addEventListener('hidden.bs.modal', function () {
    document.getElementById('prospection_field').value = '';
    document.getElementById('addProspectionForm').reset();
});

// Initialiser les tooltips Bootstrap
document.addEventListener('DOMContentLoaded', function() {
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    if (typeof bootstrap !== 'undefined') {
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    }
});
</script>
{% endblock %}

