{% extends 'base.html.twig' %}

{% block title %}{{ structure_accueil.id ? "Modifier la structure d'accueil" : "Nouvelle structure d'accueil" }}{% endblock %}

{% block page_content %}
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
                        <h1 class="h4 mb-0">
                            {{ structure_accueil.id ? "Modifier la structure d'accueil" : "Enregistrer une nouvelle entreprise ou atelier artisanal prospecter" }}
                        </h1>
                        <a href="{{ path('app_structure_accueil_index') }}" class="btn btn-outline-secondary btn-sm">
                            Retour
                        </a>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, { attr: { id: 'structure-accueil-form', 'data-structure-id': structure_accueil.id|default(''), 'data-prospection-flow': (app.request.query.get('flow') == 'prospection' and not structure_accueil.id) ? '1' : '' } }) }}
                            <div class="row">
                                <div class="col-12 mb-3">
                                    {{ form_row(form.nomStructure) }}
                                </div>
                                <div class="col-12 mb-3">
                                    {{ form_row(form.type) }}
                                </div>
                                <div class="col-12 mb-3">
                                    {{ form_row(form.localite) }}
                                </div>
                                <div class="col-12 mb-3">
                                    {{ form_label(form.telephoneStructure) }}
                                    <div class="input-group">
                                        <span class="input-group-text bg-white text-muted border-end-0" style="border-right: 0;">+225</span>
                                        {{ form_widget(form.telephoneStructure) }}
                                    </div>
                                    {{ form_errors(form.telephoneStructure) }}
                                </div>
                                <div class="col-12 mb-3">
                                    {{ form_row(form.secteurActivite) }}
                                </div>
                                <div class="col-12 mb-3">
                                    {{ form_row(form.nomResponsable) }}
                                </div>
                                <div class="col-12 mb-3">
                                    {{ form_label(form.telephoneResponsable) }}
                                    <div class="input-group">
                                        <span class="input-group-text bg-white text-muted border-end-0" style="border-right: 0;">+225</span>
                                        {{ form_widget(form.telephoneResponsable) }}
                                    </div>
                                    {{ form_errors(form.telephoneResponsable) }}
                                </div>
                                <div class="col-12 mb-3">
                                    <label for="prospection-date" class="form-label">Date de prospection</label>
                                    <input type="date" id="prospection-date" name="prospection_date" class="form-control" required>
                                </div>
                            </div>
                            {% set in_flow = app.request.query.get('flow') == 'prospection' and not structure_accueil.id %}
                            <div class="mt-3 d-flex justify-content-between">
                                <a href="{{ path('app_structure_accueil_index') }}" class="btn btn-outline-secondary">
                                    Retour
                                </a>
                                {% if in_flow %}
                                    <button type="submit" name="next_step" value="prospection" class="btn btn-primary">
                                        Suivant
                                    </button>
                                {% else %}
                                    <button type="submit" class="btn btn-primary">
                                        {{ structure_accueil.id ? 'Mettre Ã  jour' : 'Enregistrer' }}
                                    </button>
                                {% endif %}
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
