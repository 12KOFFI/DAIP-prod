{% extends 'base.html.twig' %}

{% block title %}Liste des Structures d'accueil{% endblock %}

{% block styles %}
    {# CSS commun importé #}
    <link rel="stylesheet" href="{{ asset('css/common-styles.css') }}">
{% endblock %}

{% block page_content %}
    {# En-tête de la page #}
    <div class="page-header mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="d-flex align-items-center">
                    <div class="icon-wrapper bg-primary bg-opacity-10 rounded-3 p-3 me-3">
                        <i class="fas fa-building fs-3 text-primary"></i>
                    </div>
                    <div>
                        <h1 class="h3 mb-1 fw-bold">Structures d'accueil</h1>
                        <p class="text-muted mb-0">Gestion des entreprises et ateliers prospectés</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mt-3 mt-md-0">
                <div class="d-grid">
                    <a href="{{ path('app_structure_accueil_new', { flow: 'prospection' }) }}" 
                       class="btn btn-primary py-2">
                        <i class="fas fa-plus-circle me-2"></i>
                        Nouvelle prospection
                    </a>
                </div>
            </div>
        </div>
    </div>

    {# Carte contenant le tableau #}
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0 py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="h6 mb-0 fw-semibold text-secondary">
                    <i class="fas fa-list me-2"></i>
                    Liste des structures Prospectées
                </h2>
                <span class="badge bg-light text-dark border">
                    {{ structures_accueil|length }} structure{{ structures_accueil|length > 1 ? 's' : '' }}
                </span>
            </div>
        </div>
        
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                           
                            <th class="text-muted fw-semibold small py-3">Structure</th>
                            <th class="text-muted fw-semibold small py-3">Type</th>
                            <th class="text-muted fw-semibold small py-3">Localité</th>
                            <th class="text-muted fw-semibold small py-3">Contact structure</th>
                            <th class="text-muted fw-semibold small py-3">Secteur</th>
                            <th class="text-muted fw-semibold small py-3">Responsable</th>
                            <th class="text-muted fw-semibold small py-3">Contact responsable</th>
                            <th class="text-muted fw-semibold small text-end px-4 py-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for structure in structures_accueil %}
                        <tr class="table-row-hover">
                           
                            <td>
                                <div class="fw-semibold text-dark">{{ structure.nomStructure }}</div>
                            </td>
                            <td>
                                <span class="badge bg-info bg-opacity-10 text-info border border-info">
                                    {{ structure.type }}
                                </span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-map-marker-alt text-muted me-2 small"></i>
                                    <span class="text-secondary">{{ structure.localite }}</span>
                                </div>
                            </td>
                            <td>
                                {% if structure.telephoneStructure %}
                                    <a href="tel:{{ structure.telephoneStructure }}" 
                                       class="text-decoration-none d-flex align-items-center text-primary">
                                        <i class="fas fa-phone me-2 small"></i>
                                        {{ structure.telephoneStructure }}
                                    </a>
                                {% else %}
                                    <span class="text-muted">—</span>
                                {% endif %}
                            </td>
                            <td>
                                <span class="text-secondary">{{ structure.secteurActivite }}</span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-user text-muted me-2 small"></i>
                                    <span class="text-secondary">{{ structure.nomResponsable }}</span>
                                </div>
                            </td>
                            <td>
                                {% if structure.telephoneResponsable %}
                                    <a href="tel:{{ structure.telephoneResponsable }}" 
                                       class="text-decoration-none d-flex align-items-center text-primary">
                                        <i class="fas fa-phone me-2 small"></i>
                                        {{ structure.telephoneResponsable }}
                                    </a>
                                {% else %}
                                    <span class="text-muted">—</span>
                                {% endif %}
                            </td>
                            <td class="px-4">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a href="{{ path('app_structure_accueil_edit', {'id': structure.id}) }}" 
                                       class="btn btn-sm btn-outline-warning"
                                       data-bs-toggle="tooltip"
                                       title="Modifier la structure">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" 
                                            class="btn btn-sm btn-outline-danger"
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteModal{{ structure.id }}"
                                            title="Supprimer la structure">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                    
                                    <!-- Modal de confirmation -->
                                    <div class="modal fade" id="deleteModal{{ structure.id }}" tabindex="-1" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header bg-danger text-white">
                                                    <h5 class="modal-title">
                                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                                        Confirmation de suppression
                                                    </h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p class="mb-3"><strong>Attention !</strong> Vous êtes sur le point de supprimer la structure :</p>
                                                    <div class="alert alert-warning">
                                                        <i class="fas fa-building me-2"></i>
                                                        <strong>{{ structure.nomStructure }}</strong>
                                                    </div>
                                                    <p class="text-danger fw-semibold mb-2">
                                                        <i class="fas fa-info-circle me-2"></i>
                                                        Cette action supprimera également :
                                                    </p>
                                                    <ul class="text-muted">
                                                        <li>Toutes les <strong>prospections</strong> associées à cette structure</li>
                                                        <li>Tous les <strong>postes d'apprentissage</strong> (prospections métiers) rattachés</li>
                                                    </ul>
                                                    <p class="text-danger fw-bold mt-3">
                                                        <i class="fas fa-exclamation-circle me-2"></i>
                                                        Cette action est irréversible !
                                                    </p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                        <i class="fas fa-times me-2"></i>Annuler
                                                    </button>
                                                    <form method="post"
                                                          action="{{ path('app_structure_accueil_delete', {'id': structure.id}) }}"
                                                          class="d-inline">
                                                        <input type="hidden" name="_method" value="DELETE">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ structure.id) }}">
                                                        <button type="submit" class="btn btn-danger">
                                                            <i class="fas fa-trash me-2"></i>Supprimer définitivement
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9" class="text-center py-5">
                                <div class="empty-state">
                                    <div class="icon-wrapper bg-light rounded-circle p-4 d-inline-flex mb-3">
                                        <i class="fas fa-inbox fs-1 text-muted"></i>
                                    </div>
                                    <h3 class="h5 text-muted mb-2">Aucune structure d'accueil</h3>
                                    <p class="text-muted mb-3">Commencez par créer votre première prospection</p>
                                    <a href="{{ path('app_structure_accueil_new', { flow: 'prospection' }) }}" 
                                       class="btn btn-primary">
                                        <i class="fas fa-plus-circle me-2"></i>
                                        Nouvelle prospection
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{# JavaScript pour les tooltips Bootstrap (optionnel) #}
{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialiser les tooltips Bootstrap si disponible
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            if (typeof bootstrap !== 'undefined') {
                tooltipTriggerList.map(function (tooltipTriggerEl) {
                    return new bootstrap.Tooltip(tooltipTriggerEl);
                });
            }
        });
    </script>
{% endblock %}
