{% extends 'base.html.twig' %}

{% block title %}CfaEtablissement index{% endblock %}

{% block page_content %}
    <h1 class="mb-4">Liste des CFA/Établissements</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table">
                <tr>
                    <th>Id</th>
                    <th>Nom de l'établissement</th>
                    <th>Nom du chef d'établissement</th>
                    <th>Email</th>
                    <th>Numéro CFA</th>
                    <th>Région</th>
                    <th>Métiers</th>
                   
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for cfa_etablissement in cfa_etablissements %}
                <tr>
                    <td>{{ cfa_etablissement.id }}</td>
                    <td>{{ cfa_etablissement.nomEtablissement }}</td>
                    <td>{{ cfa_etablissement.nomChefEtablissement }}</td>
                    <td>
                        <a href="mailto:{{ cfa_etablissement.email }}" class="text-decoration-none">
                            {{ cfa_etablissement.email }}
                        </a>
                    </td>
                    <td>{{ cfa_etablissement.numcfaEtablissement }}</td>
                    <td>
                        {% if cfa_etablissement.region %}
                            <span class="badge bg-info">{{ cfa_etablissement.region }}</span>
                        {% else %}
                            <span class="text-muted">-</span>
                        {% endif %}
                    </td>
                    
                    <td>
                        {% if cfa_etablissement.cfaMetiers is not empty %}
                            <div class="d-flex flex-column gap-1">
                            {% for cfaMetier in cfa_etablissement.cfaMetiers %}
                                <small>
                                    <strong>{{ cfaMetier.metier.nom }}</strong>: 
                                    <span class="badge bg-success">{{ cfaMetier.effectif }}</span>
                                </small>
                            {% endfor %}
                            </div>
                        {% else %}
                            <span class="text-muted">Aucun métier</span>
                        {% endif %}
                    </td>
                    
                    <td>
                        <div class="d-flex flex-column flex-sm-row gap-2">
                            <a href="{{ path('app_cfa_etablissement_edit', {'id': cfa_etablissement.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                            <form method="post" action="{{ path('app_cfa_etablissement_delete', {'id': cfa_etablissement.id}) }}" class="m-0" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce cfa etablissement ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cfa_etablissement.id) }}">
                                <button class="btn btn-danger btn-sm">Supprimer</button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10" class="text-center text-muted py-4">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-4">
        <a href="{{ path('app_cfa_etablissement_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Nouveau CFA/Établissement
        </a>
    </div>
{% endblock %}
